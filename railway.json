{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "nixpacks",
        "buildCommand": "echo 'Building with Nixpacks'"
    },
     "deploy": {
        "startCommand": "sh -c \"sed -i 's/listen 8000;/listen $PORT;/g' /etc/nginx/conf.d/default.conf && /usr/bin/supervisord -c /etc/supervisor/conf.d/supervisor.conf -n\""
    }
}